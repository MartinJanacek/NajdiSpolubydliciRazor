@page
@using NajdiSpolubydliciRazor.Enums
@model NajdiSpolubydliciRazor.Pages.Demand.DemandsModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/listingofadvertisments.min.css" />
</head>

<div class="container">
    <form class="search">
        <div></div>
        <div>
            <label>Okres:</label>
            <select asp-for="District" asp-items="Html.GetEnumSelectList<District>()"></select>
            <span asp-validation-for="District"></span>
        </div>
        <div></div>
        <div></div>
        <button type="submit">Hledat</button>
        <div></div>
    </form>
    <div class="listing">
        @if (Model.Demands is null || Model.Demands.Count == 0)
        {
            <h3 class="notfound">Žádné nabídky nenalezeny</h3>
        }
        else
        {
            foreach (var offer in Model.Demands)
            {
                <a href="~/Demand/Demand/@offer.Id" style="border-bottom: solid 3px black">
                    <div>
                        <p>@offer.Text</p>
                        <p>@offer.Location</p>
                    </div>
                </a>
            }
        }
    </div>
</div>
